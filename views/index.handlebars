<div class="container">


  <div class="jumbotron">

    <h1 id="yum">Looking Yummy</h1>
    <p id="yum">Thinking about burgers makes me hungry</p>
    <br>
    <h2 id="yum">Name Your Own Yum Yum Burger</h2>

    <form class="create-form">
      <div class="form-group">
        <label for="newburger" id="yum">Name Yours:</label>
        <input type="text" id="newburger" name="burger">
        <button type="submit" class="btn btn-outline-success" id="addburger"><span
            class="fa fa-thumbs-up"></span></button>
      </div>
    </form>
  </div>

  <div class="row">
    <!--burgers names created by user-->
    <div class="col-sm-6">
      <div class="panel panel-success">
        <div class="panel-heading" id="leftside"><strong>New Burgers</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="devourburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  
  <!--burgers that have been devoured by user-->
 <div class="col-sm-6">
            <div class="panel panel-danger">
                <div class="panel-heading" id="rightside"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="throwAwayTrash btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>



</div>