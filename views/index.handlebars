<div class="container">


  <div class="jumbotron">

    <h1 id="yum">Looking Yummy</h1>
    <p id="yum">Thinking about burgers makes me hungry</p>
    <br>
    <h2 id="yum">Name Your Own Yum Yum Burger</h2>

    <form class="create-form">
      <div class="form-group">
        <label for="newburger" id="yum">Name Yours:</label>
        <input type="text" id="newburger" name="burger">
        <button type="button" class="btn btn-outline-success" id="addburger"><span
            class="fa fa-thumbs-up"></span></button>
      </div>
    </form>
</div>


    <div class="form-group">
      <label for="sleepy">Devoured</label><br>
      <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
      <input type="radio" name="sleepy" value="0"> Awake
    </div>





  





  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> cats/cat-block sleep=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Cats that are sleepy!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> cats/cat-block sleep=false}}
    {{/if}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>


</div>